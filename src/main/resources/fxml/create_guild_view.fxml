<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.controllers.CreateGuildController"
      spacing="10" style="-fx-padding: 10;">

    <Label text="Tworzenie nowej gildii" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <TextField fx:id="guildNameField" promptText="Nazwa gildii"/>

    <Button text="Utwórz gildię" onAction="#createGuild"/>

    <Label fx:id="statusLabel" style="-fx-text-fill: #ff0000;"/>

</VBox>